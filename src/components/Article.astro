---
interface Props {
  url?: string;
  title: string;
  description: string;
}

const { url, title, description } = Astro.props;
---

<a href={url ?? ""}>
  <article>
    <h3 class="txt-bold">{title}</h3>
    <p>{description}</p>
  </article>
</a>

<style>
  article {
    margin-bottom: var(--spacing-4);
  }
</style>
